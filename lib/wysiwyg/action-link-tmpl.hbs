{{#em-modal-title}}
    {{#em-modal-toggler class="close"}}<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>{{/em-modal-toggler}}
    <h4 class="modal-title">Enter link address</h4>
{{/em-modal-title}}

{{#em-modal-body class="form-horizontal"}}
      <div class="form-group">
        <label class="control-label col-sm-3">Link Name</label>
        <div class="col-sm-9">
          {{input placeholder="Text" action="addLink" value=selection class="form-control"}}
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-3">Link URL</label>
        <div class="col-sm-9">
          {{input placeholder="http://example.com" action="addLink" value=linkHref class="form-control"}}
        </div>
      </div>
{{/em-modal-body}}
{{#em-modal-footer}}
    <button type="submit" class="btn btn-primary" {{ action 'addLink' }}>Add link</button>
    {{#em-modal-toggler class="btn btn-default"}}Close{{/em-modal-toggler}}
{{/em-modal-footer}}
